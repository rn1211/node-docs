dist: trusty
sudo: required

language: generic

services:
    - docker
addons:
  apt:
    packages:
      - docker-ce

script: ./test-build.sh $NODE_VERSION $VARIANT

stages:
  - Test
  - Build
  - name: Deploy
    if: branch = master AND type IN (push)

jobs:
  include:
    - stage: Test
      env:
        - TEST: Doc Toc Check
      language: node_js
      install: npm i -g doctoc
      script:
        - cp README.md README.md.tmp &&
          doctoc --title='## Table of Contents' --github README.md &&
          diff -q README.md README.md.tmp

    - stage: Test
      env:
        - TEST: Shell Check
      script: shellcheck *.sh
      addons:
        apt:
          sources:
            - debian-sid
          packages:
            - shellcheck

    - stage: Deploy
      script: ./generate-stackbrew-pr.sh

